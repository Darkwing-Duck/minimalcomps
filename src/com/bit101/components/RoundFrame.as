package com.bit101.components
{
    import flash.display.DisplayObjectContainer;

    /**
     * @history Created on 9/5/14, 0:58.
     * @author Sergey Smirnov
     */
    public class RoundFrame extends Frame
    {
        //----------------------------------------------------------------------------------------------
        //
        //  Class constants
        //
        //----------------------------------------------------------------------------------------------

        //----------------------------------------------------------------------------------------------
        //
        //  Class variables
        //
        //----------------------------------------------------------------------------------------------

        private var _radius:int;

        //----------------------------------------------------------------------------------------------
        //
        //  Class flags
        //
        //----------------------------------------------------------------------------------------------

        //----------------------------------------------------------------------------------------------
        //
        //  Constructor
        //
        //----------------------------------------------------------------------------------------------

        public function RoundFrame(parent:DisplayObjectContainer = null, xpos:Number = 0, ypos:Number = 0)
        {
            super(parent, xpos, ypos);

            _radius = 10;
        }

        //----------------------------------------------------------------------------------------------
        //
        //  Event handlers
        //
        //----------------------------------------------------------------------------------------------

        //----------------------------------------------------------------------------------------------
        //
        //  Private Methods
        //
        //----------------------------------------------------------------------------------------------

        //----------------------------------------------------------------------------------------------
        //
        //  Protected Methods
        //
        //----------------------------------------------------------------------------------------------

        override protected function drawRBody():void
        {
            graphics.drawRoundRect(0, 0, width, height, radius, radius);
        }

        //----------------------------------------------------------------------------------------------
        //
        //  Public Methods
        //
        //----------------------------------------------------------------------------------------------

        //----------------------------------------------------------------------------------------------
        //
        //  Accessors
        //
        //----------------------------------------------------------------------------------------------

        public function get radius():int
        {
            return _radius;
        }

        public function set radius(value:int):void
        {
            _radius = value;
            invalidate();
        }
    }
}
